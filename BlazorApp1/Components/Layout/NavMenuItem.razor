<li class="nav-item">

    @switch (Value)
    {
        case NavigationGroup group:

            <div class="nav-item-wrapper">
                <a class="nav-link dropdown-indicator label-1 collapsed" href="@("#"+group.Id)" role="button" data-bs-toggle="collapse" aria-expanded="true" aria-controls="@group.Id">
                    <div class="d-flex align-items-center">
                        <div class="dropdown-indicator-icon-wrapper">
                            <span class="fas fa-caret-right dropdown-indicator-icon"></span> 
                        </div>
                        <span class="nav-link-icon">
                            <i class="fas fas-chart-pie"></i>
                        </span>
                        <span class="nav-link-text">@group.Title</span>
                     </div>
                </a>
                <div class="parent-wrapper label-1">
                    <ul class="nav parent collapse" data-bs-parent="#navbarVerticalCollapse" id="@group.Id" style="">
                        <li class="collapsed-nav-item-title d-none">@group.Title</li>
                        @foreach (var item in group.Children)
                        {
                            <NavMenuItem Value="item" />
                        }
                    </ul>
                </div>
            </div>

            break;
        case NavigationLink:
            <li class="nav-item">
            <a class="nav-link" Href="@Value.Href" Match="@Value.Match">
                    <div class="d-flex align-items-center"><span class="nav-link-text">@Value.Title</span></div>
                </a><!-- more inner pages-->
            </li>

            break;
    }



</li>










@code {
    [Parameter, EditorRequired]
    public required NavigationItem Value { get; set; }
}
